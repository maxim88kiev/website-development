<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-rss"></i> {{ heading_title }}</h3>
  </div>
    <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <td>{{ column_sr_no }}</td>
          <td>{{ column_post }}</td>
          <td>{{ column_author }}</td>
          <td>{{ column_totalcoment }}</td>
          <td>{{ column_status }}</td>
          <td class="text-right">{{ column_action }}</td>
        </tr>
      </thead>
      <tbody>
	  {% if recentblogs %}
	  {% for recent in recentblogs %}
        <tr>
			
        
          <td>{{ recent.blog_id }}</td>
          <td>{{ recent.name }}</td>
          <td>{{ recent.author }}</td>
          <td>{{ recent.total }}</td>
          <td>{{ recent.status }}</td>
          <td class="text-right"><a href="{{ recent.href }}" data-toggle="tooltip" title="{{ button_view }}" ><i class="fa fa-eye"></i></a></td>
		  
        </tr>
		{% endfor %}
        {% else %}
		
        <tr>
          <td class="text-center" colspan="6">{{ text_no_results }}</td>
        </tr>
		{% endif %}
      </tbody>
    </table>
  </div>
</div>